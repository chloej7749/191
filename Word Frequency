package com.mycompany.wordfrequency;
import java.util.Scanner;

/**
 *
 * @author chloe
 */
public class WordFrequency {
    // getWordFrequency method: accepts array wordsList, size of array, and specific word to find frequency
    public static int getWordFrequency(String[] wordsList, int listSize, String currWord){
        // count of word = 0
        int count = 0;
        // for every word in the wordsList, if the word = the currWord, increase the count of that word
        for (int i = 0; i < listSize; i++){
            if (wordsList[i].equalsIgnoreCase(currWord)){
                count ++;
            }
        }
        // returns the total number of times that word appeared
        return count;
    }
    
    public static void main(String[] args) {
        // using Scanner to read user input
        Scanner scanner = new Scanner(System.in);
        // declares wordsList array of strings with 20 elements
        String[] wordsList = new String[20];
        
        // asks user for number of words they will enter
        System.out.print("How many words will you enter? ");
        // sets user input = size of list
        int listSize = scanner.nextInt();
        System.out.print("Enter words: ");
        // sets value at every index of array = to what is read from user input
        for (int i = 0; i < listSize; i++){
            wordsList[i] = scanner.next();
        }
        System.out.println("Word frequencies: ");
        // loops through values of wordsList to find frequency of wordsList[i]
        for (int i = 0; i < listSize; i++){
            int frequency = getWordFrequency(wordsList, listSize, wordsList[i]);
            System.out.println(wordsList[i] + ": " + frequency);
        }
        
        // remember to close the scanner to avoid info links (i forgot to last time!)
        scanner.close();
                
    }
}

